{
  "manifest_version": 3,
  "name": "reIS.mendelu",
  "version": "1.0.0",
  "description": "reIS.mendelu - moderní a jednoduchý.",
  "icons": {
    "16": "icons/reis_logo16.png",
    "48": "icons/reis_logo48.png",
    "128": "icons/reis_logo128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/reis_logo16.png",
      "48": "icons/reis_logo48.png",
      "128": "icons/reis_logo128.png"
    }
  },
  "permissions": ["activeTab","scripting"],
  "content_scripts": [
    {
      "matches": [
        "https://is.mendelu.cz/auth/",
        "https://is.mendelu.cz/auth/?*",
        "https://is.mendelu.cz/auth/osobni_rozvrh",
        "https://is.mendelu.cz/auth/osobni_rozvrh?*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' https://cdn.tailwindcss.com; object-src 'self'"
  }
}